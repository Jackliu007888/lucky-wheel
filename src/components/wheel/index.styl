.wheel-wrapper
  position absolute
  top 9.25rem
  left 0.875rem
  & > * 
    position absolute
  .wheel-content
    width 17rem
    height 17rem
    background-position center
    background-size contain
    background-repeat no-repeat

    & > *
      position absolute
      width 100%
      height 100%
      top 0
      left 0
    svg 
      width 14.8rem
      height 14.8rem
      top 50%
      left 50%
      position absolute
      transform translate(-50%, -50%)
    .prize
      display flex
      align-items center
      padding 1.7rem 0 0 0
      box-sizing border-box
      flex-direction column
      font-size 0.6rem
      font-weight bold

      .name
        color #000000
      .img
        width 2.5rem
        height 2rem
        margin-top 2px
        object-fit contain

  .wheel-button
    width 4rem
    height 5rem
    top 5.5rem
    left 6.5rem
    background-position center bottom
    background-size contain
    background-repeat no-repeat
